{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start Server + Debug",
            "program": "${workspaceFolder}/build/server.js",
            "protocol": "inspector",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "runtimeArgs": ["-r", "ts-node/register"],
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Start Tests + Debug",
            "program": "${workspaceRoot}/node_modules/mocha/bin/mocha",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "runtimeArgs": ["-r", "ts-node/register", "test/**/*.ts"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Server",
            "port": 39615,
            "address": "localhost",
            "localRoot": "${workspaceRoot}",
            "protocol": "inspector",
            "sourceMaps": true,
            "remoteRoot": "${workspaceRoot}"
        }
    ]
}